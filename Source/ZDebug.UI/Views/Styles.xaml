<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:ZDebug.UI.Controls">

    <SolidColorBrush x:Key="AddressForeground" Color="Gray"/>
    <SolidColorBrush x:Key="OpcodeForeground" Color="Navy"/>
    <SolidColorBrush x:Key="SeparatorForeground" Color="DarkGray"/>

    <c:FontAndColorSetting x:Key="AddressSetting" Foreground="{StaticResource AddressForeground}"/>
    <c:FontAndColorSetting x:Key="CommentSetting" Foreground="DarkGreen"/>
    <c:FontAndColorSetting x:Key="ConstantSetting" Foreground="Peru"/>
    <c:FontAndColorSetting x:Key="GlobalVariableSetting" Foreground="Teal"/>
    <c:FontAndColorSetting x:Key="KeywordSetting" Foreground="MediumBlue"/>
    <c:FontAndColorSetting x:Key="LocalVariableSetting" Foreground="Teal"/>
    <c:FontAndColorSetting x:Key="SeparatorSetting" Foreground="{StaticResource SeparatorForeground}"/>
    <c:FontAndColorSetting x:Key="StackVariableSetting" Foreground="Teal"/>
    <c:FontAndColorSetting x:Key="ZTextSetting" Foreground="Maroon" Background="#ffffe6" FontFamily="Times New Roman" FontSize="15.5"/>

    <Style TargetType="{x:Type Image}" x:Key="smallImageStyle">
        <Setter Property="Height" Value="12"/>
        <Setter Property="Width" Value="12"/>
    </Style>

    <Style TargetType="{x:Type Run}" x:Key="grayText">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="False">
                <Setter Property="Foreground" Value="Gray"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Run}" x:Key="blueTextIfModified">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsFrozen}" Value="True"/>
                    <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="False"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Foreground" Value="Gray"/>
            </MultiDataTrigger>

            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsModified}" Value="True"/>
                    <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="False"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Foreground" Value="Blue"/>
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ScrollViewer Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" 
                                  Padding="{TemplateBinding Padding}">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>